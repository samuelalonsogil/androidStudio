<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/superficie"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="30sp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:text=""
        />

    <TextView
        android:id="@+id/poblacion"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/superficie"
        android:textSize="20sp"
        android:text=""
        />

    <TextView
        android:id="@+id/densidad"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/poblacion"
        android:textSize="20sp"
        android:text=""
        />

    <TextView
        android:id="@+id/capital"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/densidad"
        android:textSize="20sp"
        android:text=""
        />

    <ImageView
        android:id="@+id/bandera"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/capital"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>